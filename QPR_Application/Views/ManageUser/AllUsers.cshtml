@model IEnumerable<QPR_Application.Models.ViewModels.AllUsersViewModel>

@{
    ViewData["Title"] = "AllUsers";
}

<div class="">
    <div class="row">
        <div class="col">
            <h1>All Users</h1>
        </div>
        <div class="col d-flex">
            <a class="btn btn-primary ms-auto align-content-center align-self-center" asp-action="CreateUser">Create New</a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table id="example1" class="table table-striped table-bordered pt-1">
        <thead class="table-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Organisation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logintype)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CvoContactNumberOffice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastModified)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeType)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Organisation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logintype)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CvoContactNumberOffice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastModified)
                    </td>                    
                    <td class="align-content-center align-items-center">
                        @if (item.Status == "t")
                        {
                            <div class="btn btn-primary disabled w-100">Active</div>
                        }
                        else if (item.Status == "f")
                        {
                            <div class="btn btn-secondary disabled w-100 ">Inactive</div>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeType)
                    </td>
                    <td>
                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.UserCode">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>