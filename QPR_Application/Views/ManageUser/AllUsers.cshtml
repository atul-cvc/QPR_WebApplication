@model IEnumerable<QPR_Application.Models.Entities.registration>

@{
    ViewData["Title"] = "AllUsers";
}

<div class="">
    <div class="row">
        <div class="col">
            <h1>All Users</h1>
        </div>
        <div class="col d-flex">
            <a class="btn btn-primary ms-auto align-content-center align-self-center" asp-action="CreateUser">Create New</a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table id="example1" class="table table-striped table-bordered pt-1">
        <thead class="table-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.userid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.organisation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.logintype)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.desiganation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mobilenumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.lastmodified)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.userid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.organisation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.logintype)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.desiganation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mobilenumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lastmodified)
                    </td>
                    <td class="align-content-center align-items-center">
                        @if (item.status == "t")
                        {
                            <div class="btn btn-primary disabled w-100">Active</div>
                        }
                        else if (item.status == "f")
                        {
                            <div class="btn btn-secondary disabled w-100 ">Inactive</div>
                        }
                    </td>
                    <td>
                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.usercode">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>