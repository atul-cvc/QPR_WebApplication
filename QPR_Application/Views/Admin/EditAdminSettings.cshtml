@model QPR_Application.Models.Entities.AdminSettings

@{
    ViewData["Title"] = "EditAdminSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditAdminSettings</h1>

<h4>AdminSettings</h4>
<hr />
<div class="row">
    <div class="col-md-6 m-auto">
        <form asp-action="EditAdminSettings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-2 ">
                <label asp-for="VAW_URL" class="control-label"></label>
                <input asp-for="VAW_URL" class="form-control" />
                <span asp-validation-for="VAW_URL" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2 ">
                <label asp-for="created_at" class="control-label"></label>
                <input asp-for="created_at" class="form-control" readonly />
                <span asp-validation-for="created_at" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 ">
                <label asp-for="updated_at" class="control-label"></label>
                <input asp-for="updated_at" class="form-control" readonly />
                <span asp-validation-for="updated_at" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2 ">
                <label asp-for="QPR_Active_From" class="control-label"></label>
                <input asp-for="QPR_Active_From" class="form-control" onkeydown="return false;" />
                <span asp-validation-for="QPR_Active_From" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 ">
                <label asp-for="QPR_Active_To" class="control-label"></label>
                <input asp-for="QPR_Active_To" class="form-control" onkeydown="return false;" />
                <span asp-validation-for="QPR_Active_To" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 ">
                <label asp-for="SecretKey" class="control-label"></label>
                <input asp-for="SecretKey" class="form-control" readonly />
                <span asp-validation-for="SecretKey" class="text-danger"></span>
            </div>

            @* <div class="form-group mt-2 ">
                <label asp-for="Test_String" class="control-label"></label>
                <input asp-for="Test_String" class="form-control" />
                <span asp-validation-for="Test_String" class="text-danger"></span>
            </div> *@

            
            @Html.HiddenFor(model => model.Test_String)

            <div class="mt-3" style="font-size:medium">
                <div class="form-group mt-2  form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Enable_Multi_Auth" /> @Html.DisplayNameFor(model => model.Enable_Multi_Auth)
                    </label>
                </div>
                <div class="form-group mt-2  form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group mt-5 d-flex">
                <a class="btn btn-secondary" asp-action="AdminSettings">Back</a>
                <input type="submit" value="Update" class="btn btn-success ms-auto" />
            </div>

        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-6 text-center">
        <span class="text-success">@ViewBag.SuccessMessage</span>
        <br />
        <span class="text-danger">@ViewBag.ErrMessage</span>
    </div>
</div>
<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
