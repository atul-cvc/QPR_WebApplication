@model List<QPR_Application.Models.Entities.UserRequests>

@{
    ViewData["Title"] = "ViewRequestStatus";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div>
    <div class="row">
        <div class="col">
            <h1>View Request Status</h1>
        </div>
        <div class="col d-flex">
            <a class="btn btn-primary ms-auto align-content-center align-self-center" asp-action="RaiseRequest">Raise New Request</a>
        </div>
    </div>
</div>

<div class="table-responsive" style="margin-bottom:30em;">
    <table id="example1" class="table table-striped table-bordered pt-1">
        <thead class="table-primary">
            <tr class="text-center">
                <th class="text-center">
                    Request ID
                </th>
                <th class="text-center">
                    Subject
                </th>
                <th class="text-center">
                    Subject ID
                </th>
                <th class="text-center">
                    Description
                </th>
                <th class="text-center">
                    Created
                </th>
                <th class="text-center">
                    Updated
                </th>
                <th class="text-center">
                    Qtr
                </th>
                <th class="text-center">
                    Qtr Year
                </th>
                <th class="text-center">
                    Quarter Name
                </th>
                <th class="text-center">
                    Active
                </th>
                <th class="text-center">
                    Resolved
                </th>
                <th class="text-center">
                    Action Taken
                </th>
                <th class="text-center">
                    Remarks
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.request_id)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.subject)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.subject_id)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.created_date)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.updated_date)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.qtrreport)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.qtryear)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.qtrQuarterName)
                    </td>
                    <td class="text-center">
                        @* @(item.isActive ? "TRUE" : "FALSE") *@
                        <input type="checkbox" disabled @(item.isActive ? "checked" : "") />

                    </td>
                    <td class="text-center">
                        <input type="checkbox" disabled @(item.isResolved ? "checked" : "") readonly />
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.ActionTaken)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
