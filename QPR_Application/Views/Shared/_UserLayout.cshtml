    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" /> *@

</head>
<body>
    <style>
        /* Basic styles for links */
        .nav-link {
            position: relative; /* Required for positioning the pseudo-element */
            text-decoration: none; /* Remove default underline */
            color: #333; /* Link color */
            font-size: 16px;
        }

            /* Underline effect */
            .nav-link::after {
                content: ''; /* Empty content for pseudo-element */
                position: absolute; /* Absolute positioning */
                left: 50%; /* Center the pseudo-element horizontally */
                bottom: -2px; /* Position slightly below text */
                width: 100%; /* Full width of the link */
                height: 2px; /* Height of the underline */
                background-color: #007bff; /* Underline color */
                transform: scaleX(0); /* Initial state: scale to 0 (invisible) */
                transform-origin: center; /* Scale from the center */
                transition: transform 0.3s ease; /* Smooth transition for animation */
                /* Adjust to move pseudo-element back to align with the text */
                margin-left: -50%;
            }

            /* Hover effect */
            .nav-link:hover::after {
                transform: scaleX(1); /* Scale to full width on hover */
            }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">QPR Application</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="font-size: .5em !important ">
                    @if (@HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "ROLE_CVO")
                    {
                        <ul class="navbar-nav flex-grow-1 align-content-end" id="cvo_list">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="QPR" asp-action="Index">QPR</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="DownloadQPR" asp-action="AnnualReport">Annual Report</a>
                            </li>
                            @* <li class="nav-item">
                        <a class="nav-link text-dark me-1" asp-area="" asp-controller="ChangePassword" asp-action="ChangePassword">Change Password</a>
                        </li> *@
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark me-1 " href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Requests
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink" style="font-size:14px">
                                    <li><a class="dropdown-item" asp-controller="Requests" asp-action="RaiseRequest">Raise Request</a></li>
                                    <li><a class="dropdown-item" asp-controller="Requests" asp-action="ViewRequestStatus">View Request Status</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    @if (@HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "ROLE_SO")
                    {
                        <ul class="navbar-nav flex-grow-1 align-content-end" id="so_list">
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark align-content-end" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Requests
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink" style="font-size:14px">
                                    <li><a class="dropdown-item" asp-controller="SO" asp-action="PendingRequests">View Pending Requests</a></li>
                                    <li><a class="dropdown-item" asp-controller="SO" asp-action="ApprovedRequests">View Resolved Requests</a></li>
                                </ul>
                            </li>

                        </ul>
                    }

                    <div class="d-flex">
                        <ul class="navbar-nav flex-grow-1" style="text-decoration:none !important">
                            @if (Convert.ToInt32(@HttpContextAccessor.HttpContext.Session.GetString("qtrreport")) > 0)
                            {
                                <li class="nav-item d-flex me-2">
                                    <span class="text-dark align-content-center" style="font-size:0.9rem">
                                        Quarter : @HttpContextAccessor.HttpContext.Session.GetString("qtrreport")
                                    </span>
                                </li>
                                <li class="nav-item d-flex me-3">
                                    <span class="text-dark align-content-center" style="font-size:0.9rem">
                                        Year : @HttpContextAccessor.HttpContext.Session.GetString("qtryear")
                                    </span>
                                </li>
                            }
                            <li class="dropdown">
                                <a class="btn btn-secondary dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Account
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink" style="font-size:12px">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="ChangePassword" asp-action="ChangePassword">Change Password</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Logout" asp-action="Index">Logout</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                    </div>
                </div>


            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="mb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto" >
        <div class="text-center">
            &copy; 2024 - QPR Application
        </div>
    </footer>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
